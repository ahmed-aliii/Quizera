@model CreateExamVM

<div class="container py-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white rounded-top-4 d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-journal-plus me-2"></i> Create New Exam</h4>
            <a asp-action="Index" class="btn btn-light btn-sm btn-rounded">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to Exams
            </a>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" method="post">

                <div class="mb-4">
                    <label asp-for="Title" class="form-label fw-semibold">Exam Title</label>
                    <input asp-for="Title" class="form-control form-control-lg" placeholder="Enter exam title" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Description" class="form-label fw-semibold">Description</label>
                    <textarea asp-for="Description" class="form-control form-control-lg" rows="4" placeholder="Enter exam description"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="DurationInMinutes" class="form-label fw-semibold">Duration (minutes)</label>
                    <input asp-for="DurationInMinutes" type="number" class="form-control form-control-lg" placeholder="Enter duration in minutes" />
                    <span asp-validation-for="DurationInMinutes" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="CourseId" class="form-label fw-semibold">Course</label>
                    <select asp-for="CourseId" asp-items="Model.Courses" class="form-select form-select-lg">
                        <option value="">-- Select Course --</option>
                    </select>
                    <span asp-validation-for="CourseId" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-rounded px-4">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-success btn-rounded px-4">
                        <i class="bi bi-check-circle me-1"></i> Create Exam
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
