@model Exam

@{
    ViewData["Title"] = "Exam Details";
}

<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<style>
    .page-title {
        font-weight: 700;
        color: #0d6efd;
        font-size: 1.75rem;
    }

    .card {
        border-radius: 1rem;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        }

    .badge-custom {
        font-weight: 500;
        font-size: 0.9rem;
    }

    .btn-rounded {
        border-radius: 30px;
    }

    .list-group-item {
        border-radius: 0.5rem;
        margin-bottom: 0.25rem;
    }

    .question-header {
        font-weight: 600;
        font-size: 1.05rem;
    }
</style>

<div class="container py-5">
    <!-- Header -->
    <div class="text-center mb-5">
        <h2 class="page-title"><i class="bi bi-journal-text me-2"></i> @Model.Title</h2>
        <p class="text-muted mb-2">@Model.Description</p>
        <div class="d-flex justify-content-center gap-4 flex-wrap">
            <span><strong>Duration:</strong> @Model.DurationInMinutes min</span>
            <span><strong>Course:</strong> @Model.Course?.Title</span>
            <span><strong>Created:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd")</span>
        </div>
        <hr class="mt-4" />
    </div>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-end mb-4 gap-2">
        <a asp-action="Index" class="btn btn-outline-secondary btn-rounded px-4">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to Exams
        </a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-rounded px-4">
            <i class="bi bi-pencil-square me-1"></i> Edit Exam
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-rounded px-4"
           onclick="return confirm('Are you sure you want to delete this exam?');">
            <i class="bi bi-trash me-1"></i> Delete Exam
        </a>
    </div>

    <!-- Questions Section -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold"><i class="bi bi-clipboard-check me-2"></i> Questions</h5>
            <a asp-controller="Question" asp-action="Create" asp-route-examId="@Model.Id" class="btn btn-sm btn-primary btn-rounded">
                <i class="bi bi-plus-circle me-1"></i> Add Question
            </a>
        </div>

        <div class="card-body">
            @if (Model.Questions != null && Model.Questions.Any())
            {
                int questionNumber = 1;
                foreach (var q in Model.Questions)
                {
                    <div class="card mb-4 shadow-sm border-0">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h5 class="question-header mb-0 text-dark">
                                    Q. @q.Id @q.Text
                                    <span class="badge bg-secondary ms-2 badge-custom">@q.Marks Marks</span>
                                </h5>

                                <div class="d-flex gap-1">
                                    <a asp-controller="Question" asp-action="Edit" asp-route-id="@q.Id" class="btn btn-sm btn-warning btn-rounded">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-controller="Question" asp-action="Delete" method="post"
                                          onsubmit="return confirm('Are you sure you want to delete this question?');">
                                        <input type="hidden" name="id" value="@q.Id" />
                                        <input type="hidden" name="examId" value="@Model.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger btn-rounded">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>

                            @if (q.Options != null && q.Options.Any())
                            {
                                <ul class="list-group mt-3">
                                    @foreach (var opt in q.Options)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span>@opt.Text</span>
                                            <div class="d-flex gap-1 align-items-center">
                                                @if (opt.IsCorrect)
                                                {
                                                    <span class="badge bg-success badge-custom me-1">Correct</span>
                                                }
                                                <a asp-controller="Option" asp-action="Edit" asp-route-id="@opt.Id" >
                                                   
                                                </a>
                                                <a asp-controller="Option"
                                                   asp-action="Edit"
                                                   asp-route-id="@opt.Id"
                                                   asp-route-questionId="@q.Id"
                                                   asp-route-examId="@Model.Id"
                                                   class="btn btn-sm btn-outline-warning btn-rounded">
                                                    <i class="bi bi-pencil"></i>
                                                </a>

                                                <a asp-controller="Option"
                                                   asp-action="Delete"
                                                   asp-route-id="@opt.Id"
                                                   asp-route-examId="@Model.Id"
                                                   class="btn btn-sm btn-outline-danger btn-rounded">
                                                    <i class="bi bi-trash"></i>
                                                </a>

                                            </div>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted mt-2">No options added for this question yet.</p>
                            }

                            <!-- Add Option Button -->
                            <div class="mt-3">
                                <a asp-controller="Option"
                                   asp-action="Create"
                                   asp-route-questionId="@q.Id"
                                   asp-route-examId="@Model.Id"
                                   class="btn btn-sm btn-outline-primary btn-rounded">
                                    <i class="bi bi-plus-circle me-1"></i> Add Option
                                </a>

                            </div>
                        </div>
                    </div>
                    questionNumber++;
                }
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle me-2"></i> No questions added yet.
                </div>
            }
        </div>
    </div>
</div>
