@model IEnumerable<Exam>
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Exams";
}

<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/lib/datatables/dataTables.bootstrap5.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<style>
    .page-title {
        font-weight: 700;
        color: #0d6efd;
        font-size: 1.75rem;
    }

    .card {
        border-radius: 1rem;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        }

    .btn-action {
        border-radius: 30px;
        font-weight: 500;
        transition: transform 0.2s ease;
    }

        .btn-action:hover {
            transform: scale(1.05);
        }

    table.dataTable thead th {
        background-color: #f8f9fa;
        font-weight: 600;
        color: #495057;
    }

    .dataTables_filter input {
        border-radius: 30px;
        padding: 0.4rem 1rem;
        border: 1px solid #dee2e6;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title mb-0"><i class="bi bi-journal-check me-2"></i> Exams</h2>

        @if (User.IsInRole("INSTRUCTOR"))
        {
            <a asp-action="Create" class="btn btn-primary btn-lg rounded-pill shadow-sm">
                <i class="bi bi-plus-circle me-1"></i> Add New Exam
            </a>
        }
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table id="examsTable" class="table table-striped table-hover align-middle text-center w-100">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Duration (min)</th>
                            <th>Course</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var exam in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@exam.Id</td>
                                <td>@exam.Title</td>
                                <td>@exam.Description</td>
                                <td>@exam.DurationInMinutes</td>
                                <td>@exam.Course?.Title</td>
                                <td>@exam.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        @if (User.IsInRole("INSTRUCTOR"))
                                        {
                                            <a asp-action="Details" asp-route-id="@exam.Id" class="btn btn-outline-primary btn-sm btn-action">
                                                <i class="bi bi-eye"></i> Details
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@exam.Id" class="btn btn-outline-warning btn-sm btn-action">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@exam.Id" class="btn btn-outline-danger btn-sm btn-action">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                                        }
                                        else if (User.IsInRole("STUDENT"))
                                        {
                                            <a asp-controller="Exam" asp-action="Start"
                                               asp-route-id="@exam.Id"
                                               class="btn btn-success btn-sm btn-action">
                                                <i class="bi bi-play-circle"></i> Start Exam
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#examsTable').DataTable({
                pageLength: 8,
                lengthChange: false,
                ordering: true,
                responsive: true,
                info: true,
                autoWidth: false,
                language: {
                    search: "",
                    searchPlaceholder: "Search exams...",
                    paginate: { previous: "←", next: "→" }
                },
                columnDefs: [
                    { targets: [2], render: $.fn.dataTable.render.ellipsis(60) }
                ]
            });
        });

        $.fn.dataTable.render.ellipsis = function (cutoff) {
            return function (data, type) {
                if (type === 'display' && data && data.length > cutoff) {
                    return data.substr(0, cutoff) + '…';
                }
                return data;
            };
        };
    </script>
}
