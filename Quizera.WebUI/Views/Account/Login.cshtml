@model LoginVM

@{
    ViewData["Title"] = "Login";
}

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container d-flex align-items-center justify-content-center min-vh-40">
    <div class="col-11 col-sm-8 col-md-6 col-lg-6">
        <div class="card border-0 shadow rounded-4 overflow-hidden">

            <!-- Header -->
            <div class="card-header bg-primary text-white text-center py-4 border-0">
                <h4 class="fw-bold mb-1">Welcome Back 👋</h4>
                <p class="mb-0 fw-light">Sign in to your account</p>
            </div>

            <!-- Body -->
            <div class="card-body p-4">
                <form asp-action="Login" method="post" autocomplete="off" novalidate>
                    @Html.AntiForgeryToken()

                    <!-- Email -->
                    <div class="mb-4">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bi bi-envelope"></i>
                            </span>
                            <div class="form-floating flex-grow-1">
                                <input asp-for="Email" class="form-control border-start-0" placeholder="name@example.com" autocomplete="username" />
                                <label asp-for="Email" class="text-muted"></label>
                            </div>
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Password -->
                    <div class="mb-4">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bi bi-lock"></i>
                            </span>
                            <div class="form-floating flex-grow-1">
                                <input asp-for="Password" class="form-control border-start-0" placeholder="Password" type="password" autocomplete="current-password" />
                                <label asp-for="Password" class="text-muted"></label>
                            </div>
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <!-- Remember Me -->
                    <div class="mb-4 d-flex justify-content-start">
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label text-muted"></label>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary py-3 fw-bold text-uppercase shadow-sm">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Sign In
                        </button>
                    </div>
                </form>
            </div>

            <!-- Footer -->
            <div class="card-footer bg-white text-center py-3 border-0">
                <span class="text-muted">Don’t have an account?</span>
                <a asp-action="SignUp" asp-controller="Account" class="text-primary text-decoration-none fw-semibold ms-1">
                    Create one
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
