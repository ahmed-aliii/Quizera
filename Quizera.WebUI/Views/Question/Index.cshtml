@model IEnumerable<Question>

@{
    ViewData["Title"] = "Questions";
}

<link rel="stylesheet" href="~/vendor/bootstrap/scss/bootstrap.css" />
<link rel="stylesheet" href="~/vendor/datatables/dataTables.bootstrap4.css" />

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Questions</h2>
        <a asp-action="Create" class="btn btn-primary">Add New Question</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="questionsTable" class="table table-striped table-hover align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Text</th>
                            <th>Marks</th>
                            <th>Exam</th>
                            <th>Options Count</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var q in Model)
                        {
                            <tr>
                                <td>@q.Id</td>
                                <td>@q.Text</td>
                                <td>@q.Marks</td>
                                <td>@q.Exam?.Title</td>
                                <td>@q.Options?.Count()</td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-action="Details" asp-route-id="@q.Id" class="btn btn-outline-primary btn-sm">Details</a>
                                        <a asp-action="Edit" asp-route-id="@q.Id" class="btn btn-outline-warning btn-sm">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@q.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/vendor/jquery/jquery.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="~/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.js"></script>

    <script>
        $(document).ready(function () {
            $('#questionsTable').DataTable({
                pageLength: 5,
                lengthChange: false,
                ordering: true,
                info: true,
                autoWidth: false
            });
        });
    </script>
}
