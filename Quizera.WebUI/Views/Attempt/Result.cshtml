@model AttemptResultViewModel

<div class="container mt-5 text-center">
    <h2 class="text-primary mb-4">Exam Results</h2>

    <div class="card shadow-sm border-0 p-4">
        <h4>@Model.ExamTitle</h4>
        <p><strong>Score:</strong> @Model.Score / @Model.TotalMarks</p>
        <a asp-controller="Exam" asp-action="Index" class="btn btn-outline-primary mt-3">Back to Exams</a>
    </div>
</div>
