@model IEnumerable<Course>

@{
    ViewData["Title"] = "Courses";
}

<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/lib/datatables/dataTables.bootstrap5.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<style>
    /* ✅ Custom Modern Enhancements */
    .page-title {
        font-weight: 700;
        font-size: 1.75rem;
        color: #0d6efd;
    }

    .card {
        border-radius: 1rem;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        }

    table.dataTable thead th {
        background-color: #f8f9fa;
        font-weight: 600;
        color: #495057;
    }

    .btn-action {
        border-radius: 30px;
        font-weight: 500;
        transition: all 0.2s ease;
    }

        .btn-action:hover {
            transform: scale(1.05);
        }

    .table td {
        vertical-align: middle;
    }

    .dataTables_filter input {
        border-radius: 30px;
        padding: 0.4rem 1rem;
        border: 1px solid #dee2e6;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title mb-0"><i class="bi bi-book me-2"></i> Courses</h2>
        <a asp-action="Create" class="btn btn-primary btn-lg rounded-pill shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Add New Course
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table id="coursesTable" class="table table-hover table-bordered align-middle w-100">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Instructor</th>
                            <th>Exams</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@course.Id</td>
                                <td>@course.Title</td>
                                <td>@course.Description</td>
                                <td>@course.Instructor?.UserName</td>
                                <td>
                                    <span class="badge bg-info text-dark">
                                        @(course.Exams?.Count() ?? 0)
                                    </span>
                                </td>
                                <td>@course.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-action="Details" asp-route-id="@course.Id"
                                           class="btn btn-outline-primary btn-sm btn-action">
                                            <i class="bi bi-eye"></i> Details
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@course.Id"
                                           class="btn btn-outline-warning btn-sm btn-action">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@course.Id"
                                           class="btn btn-outline-danger btn-sm btn-action">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#coursesTable').DataTable({
                pageLength: 8,
                lengthChange: false,
                ordering: true,
                responsive: true,
                language: {
                    search: "",
                    searchPlaceholder: "Search courses...",
                    info: "_START_–_END_ of _TOTAL_ courses",
                    paginate: { previous: "←", next: "→" }
                },
                columnDefs: [
                    { targets: [2], render: $.fn.dataTable.render.ellipsis(60) }
                ]
            });
        });

        // Custom truncation helper
        $.fn.dataTable.render.ellipsis = function (cutoff) {
            return function (data, type) {
                if (type === 'display' && data && data.length > cutoff) {
                    return data.substr(0, cutoff) + '…';
                }
                return data;
            };
        };
    </script>
}
