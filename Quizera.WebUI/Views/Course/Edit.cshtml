@model UpdateCourseVM

@{
    ViewData["Title"] = "Edit Course";
}

<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<style>
    .page-title {
        font-weight: 700;
        color: #0d6efd;
        font-size: 1.75rem;
    }

    .card {
        border-radius: 1rem;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        }

    .form-label {
        font-weight: 600;
    }

    .btn-rounded {
        border-radius: 30px;
        font-weight: 500;
    }

    textarea.form-control {
        resize: none;
    }
</style>

<div class="container py-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white rounded-top-4 d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-pencil-square me-2"></i> Edit Course</h3>
            <a asp-action="Index" class="btn btn-light btn-sm btn-rounded">
                <i class="bi bi-arrow-left me-1"></i> Back to Courses
            </a>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-4">
                    <label asp-for="Title" class="form-label">Course Title</label>
                    <input asp-for="Title" class="form-control form-control-lg" placeholder="Enter course title" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control form-control-lg" rows="4" placeholder="Enter course description"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="InstructorId" class="form-label">Instructor</label>
                    <select asp-for="InstructorId" asp-items="Model.Instructors" class="form-select form-select-lg">
                        <option value="">-- Select Instructor --</option>
                    </select>
                    <span asp-validation-for="InstructorId" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-rounded px-4">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-success btn-rounded px-4">
                        <i class="bi bi-check-circle me-1"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
