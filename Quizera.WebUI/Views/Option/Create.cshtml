@model CreateOptionWithinQuestionVM

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4>Add New Option</h4>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post">
                <input type="hidden" asp-for="QuestionId" />
                <input type="hidden" asp-for="ExamId" />

                <div class="mb-3">
                    <label asp-for="Text" class="form-label"></label>
                    <input asp-for="Text" class="form-control" />
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsCorrect" class="form-check-input" />
                    <label asp-for="IsCorrect" class="form-check-label"></label>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success">Save Option</button>
                    <a asp-controller="Exam"
                       asp-action="Details"
                       asp-route-id="@Model.ExamId"
                       class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
